{
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "react",
    "import",
    "flowtype",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "standard",
    "standard-react",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unused-prop-types": 0,
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "max-len": [
      "error",
      120,
      2
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "_",
        "caughtErrorsIgnorePattern": "_"
      }
    ]
  },
  "globals": {
    "fetch": true,
    "Response": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
